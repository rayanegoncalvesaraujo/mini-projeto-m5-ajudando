{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",                            // ðŸ‘ˆ necessÃ¡rio para usar "paths"
    "paths": {
      "@components/*": ["src/components/*"],   // ðŸ‘ˆ alias para componentes
      "@sections/*": ["src/sections/*"],       // ðŸ‘ˆ alias para seÃ§Ãµes como VulnerabilidadeSection
      "@utils/*": ["src/utils/*"]              // ðŸ‘ˆ (opcional) para utilitÃ¡rios
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}